@model IEnumerable<HU.Models.Possession>

@{
    ViewBag.Title = "Права владения";
}

<h2>Права владения</h2>
<a href="/Admin">Вернуться в Админ. панель</a><br /><br />
<p>
    @Html.ActionLink("Создать", "CreatePossession")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Owner.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Flat.Adress)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Start)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.End)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Size)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Owner.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Flat.Adress)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Start)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.End)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Size)
            </td>
            <td>
                @Html.ActionLink("Редактировать", "Possession", new { id = item.Id }) |
                @Html.ActionLink("Удалить", "DeletePossession", new { id = item.Id })
            </td>
        </tr>
    }

</table>
