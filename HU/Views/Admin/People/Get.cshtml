@model IEnumerable<HU.Models.Person>

@{
    ViewBag.Title = "Пользователи";
}

<h2>Пользователи</h2>
<a href="/Admin">Вернуться в Админ. панель</a><br /><br />
<p>
    @Html.ActionLink("Создать", "CreatePerson")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Passport)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Role.Name)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Passport)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Role.Name)
            </td>
            <td>
                @Html.ActionLink("Редактировать", "Person", new { id = item.Id }) |
                @Html.ActionLink("Удалить", "DeletePerson", new { id = item.Id })
            </td>
        </tr>
    }

</table>
