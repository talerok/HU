@model IEnumerable<HU.Models.Services.Service>

@{
    ViewBag.Title = "Услуги";
}

<h2>Услуги</h2>
<a href="/Admin">Вернуться в Админ. панель</a><br /><br />
<p>
    @Html.ActionLink("Создать", "CreateService")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Date)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Flat.Adress)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Info.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Info.paymentType.Name)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.Count)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Flat.Adress)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Info.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Info.paymentType.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Count)
            </td>
            <td>
                @Html.ActionLink("Редактировать", "Service", new { id = item.Id }) |
                @Html.ActionLink("Удалить", "DeleteService", new { id = item.Id })
            </td>
        </tr>
    }

</table>
